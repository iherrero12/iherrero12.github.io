---
export interface Props {
	title: string;
	icon: string;
	href: string;
}

const { icon, title, href } = Astro.props;
---

<a class="skill-card" href={href} target="_blank">
	<i class={icon}></i>
	<p>
		{title}
	</p>
</a>
<style>
	.skill-card {
		display: inline-block;
		border: 2px solid rgba(255, 170, 0, 0);
		background-color: rgba(255, 255, 255, 0.08);
		padding-left: 1rem;
		padding-right: 1rem;
		border-radius: 1rem;
		margin-right: 0.5rem;
		margin-bottom: 0.5rem;
		color: rgba(240, 240, 240, 0.87);
		transition: border 0.6s cubic-bezier(0.2, 1, 0.36, 1);
	}
	.skill-card:hover {
		border: 2px solid rgb(255, 170, 0);
		cursor: pointer;
	}
	p {
		display: inline-block;
		margin: 0 !important;
		color: rgba(240, 240, 240, 0.87);
		text-align: center;
	}
	i {
		display: inline-block;
		font-size: 1rem;
		color: rgb(255, 170, 0);
	}
</style>
